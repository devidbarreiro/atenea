# ====================================
# ENTORNO: PRODUCCIÓN
# ====================================
# Este archivo es un TEMPLATE de ejemplo
# Copiar a ~/prod/html/.env en el servidor y completar con valores reales
# ⚠️  IMPORTANTE: Usar valores seguros y fuertes en producción

# ====================================
# DJANGO CONFIGURATION (REQUERIDO)
# ====================================
SECRET_KEY=change-me-generate-STRONG-key-here-MIN-50-chars
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,atenea.nxhumans.com
ENVIRONMENT=production

# ====================================
# DATABASE CONFIGURATION (REQUERIDO)
# ====================================
# PostgreSQL - se usa en todos los entornos
USE_SQLITE=False
POSTGRES_USER=atenea_prod
POSTGRES_DB=atenea_prod
POSTGRES_PASSWORD=change-me-VERY-STRONG-password-here
# DATABASE_URL se genera automáticamente si no existe durante el deploy
# Formato: postgresql://USER:PASSWORD@db:5432/DB_NAME

# ====================================
# GOOGLE CLOUD STORAGE (REQUERIDO)
# ====================================
GCS_BUCKET_NAME=your-prod-bucket-name
GCS_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=credentials.json
# credentials.json debe estar en ~/prod/html/credentials.json

# ====================================
# REDIS & CELERY (REQUERIDO)
# ====================================
# Para Docker Compose, se usa redis interno (nombre del servicio)
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CHANNEL_REDIS_URL=redis://redis:6379/1

# ====================================
# AI SERVICE API KEYS (REQUERIDO en producción)
# ====================================
HEYGEN_API_KEY=your-heygen-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here
VERTEX_API_KEY=your-vertex-api-key-here
FREEPIK_API_KEY=your-freepik-api-key-here

# ====================================
# OTRAS CONFIGURACIONES (OPCIONAL)
# ====================================
LOG_LEVEL=INFO
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-here
DEFAULT_FROM_EMAIL=Atenea <no-reply@yourdomain.com>

# LangChain & Agent Configuration
LANGSMITH_API_KEY=your-langsmith-api-key-here
LANGSMITH_PROJECT=atenea-script-agent
DEFAULT_LLM_PROVIDER=openai
USE_LANGCHAIN_AGENT=True

# Stock Content APIs
PEXELS_API_KEY=your-pexels-api-key-here
UNSPLASH_ACCESS_KEY=your-unsplash-access-key-here
PIXABAY_API_KEY=your-pixabay-api-key-here
FREESOUND_API_KEY=your-freesound-api-key-here

# ====================================
# SECURITY HEADERS (Recomendado para producción)
# ====================================
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
