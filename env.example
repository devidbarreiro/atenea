REDIS_PASSWORD=your-redis-password-here
REDIS_API_KEY=your-redis-api-key-here

# ====================================
# CELERY (Async Tasks)
# ====================================

CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ====================================
# MONITORING & ERROR TRACKING
# ====================================

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ====================================
# SECURITY HEADERS (Production)
# ====================================

# HTTPS/SSL
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# HSTS (HTTP Strict Transport Security)
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ====================================
# CORS (if using separate frontend)
# ====================================

# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ====================================
# LOGGING
# ====================================

LOG_LEVEL=INFO

# ====================================
# LANGCHAIN & AGENT CONFIGURATION
# ====================================

# LangSmith (Observabilidad) - Opcional pero recomendado
# Obt√©n tu API key en: https://smith.langchain.com/
LANGSMITH_API_KEY=your-langsmith-api-key-here
LANGCHAIN_API_KEY=your-langchain-api-key-here  # Alias para LANGSMITH_API_KEY
LANGSMITH_PROJECT=atenea-script-agent

# ====================================
# RAG ASSISTANT CONFIGURATION
# ====================================

RAG_ENABLED=True
RAG_DOCS_PATH=docs
RAG_EMBEDDING_PROVIDER=openai  # 'openai' o 'google'
RAG_EMBEDDING_MODEL=text-embedding-3-small
RAG_LLM_PROVIDER=  # Dejar vac√≠o para usar DEFAULT_LLM_PROVIDER
RAG_LLM_MODEL=  # Dejar vac√≠o para usar default del provider
RAG_TOP_K=5
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_VECTOR_STORE_PATH=.rag_store
RAG_PROJECT_NAME=atenea-doc-assistant
LANGSMITH_PROJECT=atenea-script-agent

# LLM Provider (openai o gemini)
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=  # Dejar vac√≠o para usar default del proveedor (gpt-4o o gemini-pro)
LLM_TEMPERATURE=0.7
LLM_MAX_RETRIES=2

# Agent Cache
AGENT_CACHE_TTL=86400  # 24 horas en segundos
AGENT_CACHE_ENABLED=True

# Feature Flag: Activar LangChain en lugar de n8n
USE_LANGCHAIN_AGENT=True  # Cambiar a True para activar LangChain

# Rate Limiting
AGENT_RATE_LIMIT_PER_USER=10  # requests/hora por usuario
AGENT_RATE_LIMIT_PER_PROJECT=5  # requests/hora por proyecto
AGENT_RATE_LIMIT_GLOBAL=100  # requests/hora global

# ====================================
# EMAIL CONFIGURATION
# ====================================

EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-here  # Gmail App Password
DEFAULT_FROM_EMAIL=Atenea <no-reply@yourdomain.com>

