# ====================================
# DJANGO CONFIGURATION
# ====================================

# SECURITY WARNING: Generate a strong secret key for production!
# Python: from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())
SECRET_KEY=change-me-in-production-use-50-random-chars

# SECURITY WARNING: Never set DEBUG=True in production!
DEBUG=False

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Environment (development, staging, production)
ENVIRONMENT=development

# ====================================
# DATABASE CONFIGURATION
# ====================================

# PostgreSQL (RECOMMENDED for production)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=atenea
DB_USER=atenea_user
DB_PASSWORD=strong_password_here
DB_HOST=localhost
DB_PORT=5432

# For Docker Compose:
# DB_HOST=db
# DB_USER=atenea
# DB_PASSWORD=atenea_password

# ====================================
# GOOGLE CLOUD PLATFORM
# ====================================

GCS_BUCKET_NAME=your-bucket-name
GCS_PROJECT_ID=your-project-id

# Option 1: Path to service account JSON (NOT recommended for production)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# Option 2: Use Workload Identity in GKE (RECOMMENDED)
# Option 3: Use service account email with IAM roles

# ====================================
# AI SERVICE API KEYS
# ====================================

HEYGEN_API_KEY=your-heygen-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
FREEPIK_API_KEY=your-freepik-api-key-here
VUELA_AI_API_KEY=your-vuela-ai-api-key-here
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# ====================================
# AI SERVICE DEFAULTS
# ====================================

# ElevenLabs Defaults
ELEVENLABS_DEFAULT_MODEL=eleven_turbo_v2_5
ELEVENLABS_DEFAULT_VOICE_ID=pFZP5JQG7iQjIQuC4Bku
ELEVENLABS_DEFAULT_VOICE_NAME=Aria
ELEVENLABS_DEFAULT_LANGUAGE=es
ELEVENLABS_DEFAULT_STABILITY=0.5
ELEVENLABS_DEFAULT_SIMILARITY_BOOST=0.75
ELEVENLABS_DEFAULT_STYLE=0.0
ELEVENLABS_DEFAULT_SPEED=1.0

# HeyGen Defaults
HEYGEN_DEFAULT_AVATAR_ID=Kayla-incasualsuit-20220818
HEYGEN_DEFAULT_VOICE_ID=es-ES-ElviraNeural

# ====================================
# REDIS & CACHE (Optional but recommended)
# ====================================

REDIS_URL=redis://redis-13128.c12.us-east-1-4.ec2.redns.redis-cloud.com:13128
REDIS_PASSWORD=your-redis-password-here

# ====================================
# CELERY (Async Tasks)
# ====================================

CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ====================================
# MONITORING & ERROR TRACKING
# ====================================

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ====================================
# SECURITY HEADERS (Production)
# ====================================

# HTTPS/SSL
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# HSTS (HTTP Strict Transport Security)
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ====================================
# CORS (if using separate frontend)
# ====================================

# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ====================================
# LOGGING
# ====================================

LOG_LEVEL=INFO

# ====================================
# LANGCHAIN & AGENT CONFIGURATION
# ====================================

# LangSmith (Observabilidad) - Opcional pero recomendado
# Obtén tu API key en: https://smith.langchain.com/
LANGSMITH_API_KEY=your-langsmith-api-key-here
LANGSMITH_PROJECT=atenea-script-agent

# LLM Provider (openai o gemini)
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=  # Dejar vacío para usar default del proveedor (gpt-4o o gemini-pro)
LLM_TEMPERATURE=0.7
LLM_MAX_RETRIES=2

# Agent Cache
AGENT_CACHE_TTL=86400  # 24 horas en segundos
AGENT_CACHE_ENABLED=True

# Feature Flag: Activar LangChain en lugar de n8n
USE_LANGCHAIN_AGENT=True  # Cambiar a True para activar LangChain

# Rate Limiting
AGENT_RATE_LIMIT_PER_USER=10  # requests/hora por usuario
AGENT_RATE_LIMIT_PER_PROJECT=5  # requests/hora por proyecto
AGENT_RATE_LIMIT_GLOBAL=100  # requests/hora global

# ====================================
# NOTES
# ====================================
# 
